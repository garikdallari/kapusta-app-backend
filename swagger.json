          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "description": "Month of transaction (mm-yyyy)",
            "schema": {
              "type": "string"
            },
            "example": "mm-yyyy"
          }
        ],
        "responses": {
          "200": {
            "description": "Transactions are recieved",
            "content": {
              "application/json": {
                "example": {
