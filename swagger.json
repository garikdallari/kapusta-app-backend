{
  "openapi": "3.0.3",
  "info": {
    "title": "Kapusta API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://kapusta-33-5-api.herokuapp.com/api"
    },
    {
      "url": "http://localhost:8000/api",
      "description": "Local server"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["User"],
        "summary": "Create user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              },
              "example": {
                "name": "Vasyl",
                "email": "vasyl@gmail.com",
                "password": "pass123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User is created",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 201,
                  "message": "Registration is successful",
                  "data": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MWU3MjFjZTA2OWZmNzJjNGQ5NDgxZGIiLCJpYXQiOjE2NDI1Mzc0MjJ9.D-_DPtyy3NHryWhfY2R8T4KZyH3RmYeZNbGptlaNyVk",
                    "user": {
                      "name": "Vasyl",
                      "email": "vasyl@gmail.com"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "User with such email already registered"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["User"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              },
              "example": {
                "email": "vasyl@gmail.com",
                "password": "pass123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is created",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJfaWQiOiI2MWU3MjFjZTA2OWZmNzJjNGQ5NDgxZGIiLCJpYXQiOjE2NDI1Mzc1ODN9.yCUUpXzhO7HWx3iLRv85HaPEYUG3Vi2CwuX4Ggj51W0",
                    "user": {
                      "name": "Vasyl",
                      "email": "vasyl@gmail.com"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "User with such email is not exist or password is not correct"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/auth/current": {
      "get": {
        "tags": ["User"],
        "summary": "Get information about current user",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Info about current authorized user",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": {
                    "name": "Vasyl",
                    "email": "vasyl@gmail.com",
                    "isBalanceSet": false
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": ["User"],
        "summary": "Logout user",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged out",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "message": "successed logout"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/auth/google": {
      "get": {
        "tags": ["User"],
        "summary": "Login user by Google OAuth",
        "responses": {
          "-": {
            "description": "Return user token in query parameter 'token': '/google?token={token}'"
          }
        }
      }
    },
    "/balance": {
      "get": {
        "tags": ["Balance"],
        "summary": "Get balance",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Balance is recieved",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "data": {
                    "balance": 10000
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "patch": {
        "tags": ["Balance"],
        "summary": "Set balance",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SetBalance"
              },
              "example": {
                "balance": "10000"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Balance is changed",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "balance": 10000
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/transactions": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Create transaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTransaction"
              },
              "example": {
                "type": "expense",
                "amount": 111.11,
                "category": "food",
                "subcategory": "milk",
                "date": {
                  "day": "18",
                  "month": "1",
                  "year": "2022"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transaction is created",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 201,
                  "data": {
                    "type": "expense",
                    "amount": 111.11,
                    "category": "food",
                    "subcategory": "milk",
                    "balance": 8650.55,
                    "date": {
                      "day": "18",
                      "month": "1",
                      "year": "2022"
                    },
                    "owner": "61e721ce069ff72c4d9481db",
                    "_id": "61e730c51fbb82b1c1d40cb9",
                    "createdAt_ms": "1642762084631",
                    "createdAt": "2022-01-18T21:27:33.015Z",
                    "updatedAt": "2022-01-18T21:27:33.015Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/transactions/{transactionId}": {
      "delete": {
        "tags": ["Transactions"],
        "summary": "Delete transaction",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "transactionId",
            "required": true,
            "description": "User Id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction is deleted",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "message": "transaction deleted",
                  "result": {
                    "date": {
                      "day": "18",
                      "month": "1",
                      "year": "2022"
                    },
                    "_id": "61e730c51fbb82b1c1d40cb9",
                    "type": "expense",
                    "amount": 111.11,
                    "category": "food",
                    "subcategory": "milk",
                    "balance": 8650.55,
                    "owner": "61e721ce069ff72c4d9481db",
                    "createdAt": "2022-01-18T21:27:33.015Z",
                    "updatedAt": "2022-01-18T21:27:33.015Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Transaction not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
